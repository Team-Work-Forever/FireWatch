<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/digit_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:errorEnabled="true"
    app:errorTextColor="@color/orange"
    app:helperTextTextColor="#FF0000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <com.example.firewatch.presentation.components.digitTextField.DigitBlock
            android:id="@+id/digit_block_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <com.example.firewatch.presentation.components.digitTextField.DigitBlock
            android:id="@+id/digit_block_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
        />

        <com.example.firewatch.presentation.components.digitTextField.DigitBlock
            android:id="@+id/digit_block_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
        />

        <com.example.firewatch.presentation.components.digitTextField.DigitBlock
            android:id="@+id/digit_block_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
        />
    </LinearLayout>
</com.google.android.material.textfield.TextInputLayout>