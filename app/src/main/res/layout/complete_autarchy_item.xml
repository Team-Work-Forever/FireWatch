<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/middle_gray"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="14dp"
            android:gravity="start"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/autarchy_avatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/autarchy_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PÃ³voa de Varzim"
                    android:textAppearance="@style/textStyle"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/autarchy_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="geral@cm-pvarzim"
                        android:textAppearance="@style/textStyle"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/autarchy_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tel. 914 653 128"
                        android:textAppearance="@style/textStyle"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_item_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textAppearance="@style/textStyle" />

                <TextView
                    android:id="@+id/card_item_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Porto"
                    android:textAppearance="@style/textStyle" />

                <TextView
                    android:id="@+id/card_item_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lat: 84.12"
                    android:textAppearance="@style/textStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_item_zip_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PostalCode"
                    android:textAppearance="@style/textStyle" />

                <TextView
                    android:id="@+id/card_item_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Portugal"
                    android:textAppearance="@style/textStyle" />

                <TextView
                    android:id="@+id/card_item_lon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lat: 17812"
                    android:textAppearance="@style/textStyle" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
