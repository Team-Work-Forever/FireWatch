<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:adjustViewBounds="true"
        android:background="@color/app_background"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        android:src="@drawable/chevron_left_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/decoration_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/swiper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/register_header"
        android:textAppearance="@style/textStyle"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swiper_title">
        <TextView
            android:id="@+id/swiper_header_num_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/textStyle"
            android:textColor="@color/orange"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:id="@+id/swiper_total_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/3"
            android:textAppearance="@style/textStyle"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="196dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>